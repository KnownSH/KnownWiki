---
import SidebarLink from "./sidebarLink.astro"
import { Image } from 'astro:assets';
import knownIcon from '../assets/KnownIcon.png'
---
<button data-drawer-target="default-sidebar" data-drawer-toggle="default-sidebar" aria-controls="default-sidebar" type="button" class="inline-flex top-0 items-center p-2 mt-2 ms-3 text-sm text-gray-500 rounded-lg md:hidden hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-gray-200 dark:text-gray-400 dark:hover:bg-gray-700 dark:focus:ring-gray-600">
  <span class="sr-only">Open sidebar</span>
  <svg class="w-6 h-6" aria-hidden="true" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
  <path clip-rule="evenodd" fill-rule="evenodd" d="M2 4.75A.75.75 0 012.75 4h14.5a.75.75 0 010 1.5H2.75A.75.75 0 012 4.75zm0 10.5a.75.75 0 01.75-.75h7.5a.75.75 0 010 1.5h-7.5a.75.75 0 01-.75-.75zM2 10a.75.75 0 01.75-.75h14.5a.75.75 0 010 1.5H2.75A.75.75 0 012 10z"></path>
  </svg>
</button>

<aside id="default-sidebar" class="mocha fixed top-0 left-0 z-40 w-64 h-screen transition-transform -translate-x-full md:translate-x-0" aria-label="Sidebar">
  <div class="h-full px-3 py-4 overflow-y-auto bg-mantle">
    <a href="/" class="flex m-2 space-x-3">
      <Image src={knownIcon} alt="Icon of Known3" class="w-11 content-center" />
      <span class="m-1">
        <h1 class="text-rosewater hover:text-flamingo text-lg font-bold">KnownWiki</h1>
        <p class="text-flamingo text-xs italic">Alpha</p>
      </span>
    </a>
    <ul class="space-y-2 font-medium">
      <SidebarLink title="Home page" href="/" />
      <SidebarLink title="Source" href="/" />
    </ul>
    <div id="dropdown-cta" class="p-4 mt-4 bg-surface0" role="alert">
      <div class="flex items-center mb-3">
         <span class="bg-maroon text-orange-800 text-sm font-semibold me-2 px-2.5 py-0.5">Work in progress!</span>
      </div>
      <p class="mb-3 text-sm text-text">
         KnownWiki is very much a work-in-progress website, meaning there will be plenty of issues early on. <br><p class="font-medium text-subtext0">If you encounter any issues, DM me!</p>
      </p>
   </div>
  </div>
</aside>

<script>
  import 'flowbite';
</script>